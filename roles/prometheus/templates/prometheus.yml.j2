global:
  scrape_interval: 10s
scrape_configs:
  - job_name: 'node'
    static_configs:
      - targets: [{% for host in groups['all'] %} '{{ hostvars[host].ansible_host }}:9100' {% if not loop.last %},{% endif %}{% endfor %}] 
  - job_name: 'Prometheus'
    static_configs:
      - targets: [ 'localhost:9090' ]
  - job_name: 'DTH22'
    static_configs: 
      - targets: [ '{{ hostvars["rpi01"].ansible_host }}:{{ dht22_port }}' ]
