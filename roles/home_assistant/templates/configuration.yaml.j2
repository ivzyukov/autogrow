homeassistant:
  latitude: 52.356407
  longitude: 4.901339
  elevation: 6
  unit_system: metric
  time_zone: {{ my_timezone }}
  name: De Pijp WIP

http:
  server_host: 0.0.0.0
  server_port: {{ homeassistant_port }}
  cors_allowed_origins:
    - https://google.com
    - https://www.home-assistant.io
  login_attempts_threshold: 5

default_config:

lovelace:
  mode: yaml

tts:
