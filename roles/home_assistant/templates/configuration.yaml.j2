mqtt:
  broker: localhost
  port: {{ mosquitto_port }}

switch:
  - name: TV
    platform: rest
    resource: http://{{ shelly_plug_1 }}/relay/0
    scan_interval: 5
    body_on: 'turn=on'
    body_off: 'turn=off'
    {% raw %}
    is_on_template: '{{ value_json.ison }}'
    {% endraw %} 
    headers:
      content-Type: application/x-www-form-urlencoded

discovery:
  ignore:
    - yeelight
    - igd
    - homekit

yeelight:
  devices:
    {{ yeelight_bulb_ip_4 }}:
      name: Kitchen 1
    {{ yeelight_bulb_ip_3 }}:
      name: Kitchen 2
    {{ yeelight_bulb_ip_2 }}:
      name: Living Room
    {{ yeelight_bulb_ip_1 }}:
      name: Pallet Room

light:
  - platform: group
    name: kitchen_lights
    entities:
      - light.kitchen_1
      - light.kitchen_2

cast:
  media_player:
    - host: 192.168.2.4

