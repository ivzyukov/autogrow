switch:
  - name: Heater
    platform: rest
    resource: http://{{ shelly_plug_1 }}/relay/0
    scan_interval: 10
    body_on: 'turn=on'
    body_off: 'turn=off'
    {% raw %}
    is_on_template: '{{ value_json.ison }}'
    {% endraw %}
    headers:
      content-Type: application/x-www-form-urlencoded
  - name: Plug
    platform: rest
    resource: http://{{ shelly_plug_2 }}/relay/0
    scan_interval: 10
    body_on: 'turn=on'
    body_off: 'turn=off'
    {% raw %}
    is_on_template: '{{ value_json.ison }}'
    {% endraw %}
    headers:
      content-Type: application/x-www-form-urlencoded

discovery:
  ignore:
    - yeelight
    - homekit

light:
  - platform: mqtt
    name: "Light Den"
    unique_id: aqara_bulb_1
    state_topic: "zigbee2mqtt/aqara_bulb_1"
    availability_topic: "zigbee2mqtt/bridge/state"
    brightness: true
    color_temp: true
    schema: "json"
    command_topic: "zigbee2mqtt/aqara_bulb_1/set"
    brightness_scale: 254
