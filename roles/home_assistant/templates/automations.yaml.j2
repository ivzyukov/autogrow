- id: garden_door_tts
  alias: Door to garden temperature
  trigger:
    - platform: state
      entity_id: sensor.door_sensor_garden
      from: 'True'
      to: 'False'
  action:
    service: tts.google_say
    entity_id: media_player.living_room_speaker
    data_template:
      message: '{{ states.sensor.temp_garden.state }} degrees on balcony'
