title: De Pijp WIP
views:
  - path: default_view
    title: Home
   # panel: true
    type: horizontal-stack
    cards:
      - type: picture-elements
        title: Floor plan
        image: /local/floorplan.png
        #style:
        #  width: 100%
        #  height: 100%
        elements:
          - type: state-icon
            entity: light.living_room
            tap_action:
              action: toggle
            style:
              top: 70%
              left: 26%
          - type: state-icon
            entity: light.pallet_room
            tap_action:
              action: toggle
            style:
              top: 70%
              left: 55%
          - type: state-icon
            entity: light.kitchen_1
            tap_action:
              action: toggle
            style:
              top: 31%
              left: 25%
          - type: state-icon
            entity: light.kitchen_2
            tap_action:
              action: toggle
            style:
              top: 31%
              left: 31%
      - type: entities
        title: Lights
        entities:
          - light.living_room
          - light.pallet_room
          - light.kitchen_1
          - light.kitchen_2
      - type: vertical-stack
        cards:
          - type: weather-forecast
            entity: weather.home_de_pijp
      - type: entities
        title: Shelly switches
        entities:
          - switch.tv
          - sensor.tv
      - type: entity-button
        tap_action:
          action: call-service
          service: remote.send_command
          service_data:
            command: switch_av_tv
            entity_id: remote.xiaomi_miio
        hold_action:
          action: more-info
        show_icon: true
        show_name: true
        entity: remote.xiaomi_miio
        icon: 'mdi:mdi-remote'
        name: AV/TV
