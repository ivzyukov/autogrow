title: De Pijp WIP
views:
  - path: default_view
    title: Home
   # panel: true
    type: horizontal-stack
    cards:
      - type: picture-elements
        title: Floor plan
        image: /local/floorplan.png
        #style:
        #  width: 100%
        #  height: 100%
        elements:
          - type: state-icon
            entity: light.living_room
            tap_action:
              action: toggle
            style:
              top: 70%
              left: 26%
          - type: state-icon
            entity: light.pallet_room
            tap_action:
              action: toggle
            style:
              top: 70%
              left: 55%
          - type: state-icon
            entity: light.kitchen_1
            tap_action:
              action: toggle
            style:
              top: 31%
              left: 25%
          - type: state-icon
            entity: light.kitchen_2
            tap_action:
              action: toggle
            style:
              top: 31%
              left: 31%
      - type: entities
        title: Lights
        entities:
          - light.living_room
          - light.pallet_room
          - light.kitchen_lights
          - sensor.light_sensor_livingroom
          - sensor.light_sensor_kitchen
          - sensor.light_sensor_den
          - sensor.light_sensor_garden
      - type: vertical-stack
        cards:
          - type: weather-forecast
            entity: weather.home_de_pijp
      - type: entities
        title: Shelly switches
        entities:
          - switch.tv
          - sensor.tv
      - type: entity-button
        name: AV/TV
        tap_action:
          action: call-service
          service: remote.send_command
          service_data:
            command: switch_av_tv
            entity_id: remote.xiaomi_miio
            icon: 'mdi:mdi-remote'
        hold_action:
          action: more-info
        show_icon: true
        show_name: true

      - type: entities
        title: Sensors
        entities:
          - sensor.temp_bedroom
          - sensor.humidity_bedroom
          - sensor.temp_garden
          - sensor.humidity_garden
          - sensor.motion_sensor_livingroom
          - sensor.motion_sensor_kitchen
          - sensor.motion_sensor_den
          - sensor.motion_sensor_garden
          - sensor.door_sensor_garden
          - sensor.door_sensor_street
